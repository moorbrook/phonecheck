# voip.ms SIP credentials (create a limited sub-account for this)
SIP_USERNAME=your_subaccount
SIP_PASSWORD=your_password
SIP_SERVER=your_server.voip.ms
SIP_PORT=5060

# Target phone number to check
TARGET_PHONE=19095909995

# Phrase to detect (case-insensitive, fuzzy match)
EXPECTED_PHRASE=thank you for calling cubic machinery

# voip.ms REST API credentials for SMS
VOIPMS_API_USER=your_main_account@email.com
VOIPMS_API_PASS=your_api_password
VOIPMS_SMS_DID=your_sms_enabled_did
ALERT_PHONE=your_cell_phone_number

# Whisper model path (GGML format)
# Download from: https://huggingface.co/ggerganov/whisper.cpp/tree/main
# Options: ggml-tiny.en.bin (fastest), ggml-base.en.bin, ggml-small.en.bin
WHISPER_MODEL_PATH=./models/ggml-base.en.bin

# Logging level
RUST_LOG=info
